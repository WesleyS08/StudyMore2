<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".PrincipalActivity">

    <Button
        android:id="@+id/btnDeletarConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="38dp"
        android:backgroundTint="#5C021C"
        android:onClick="onClickDeletarConta"
        android:text="Deletar Conta"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/botao_sair"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botao_sair"
        android:layout_width="191dp"
        android:layout_height="64dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="364dp"
        android:backgroundTint="@color/btns"
        android:text="@string/logov"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>